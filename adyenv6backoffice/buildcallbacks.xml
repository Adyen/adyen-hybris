--><project name="adyenv6backoffice_buildcallbacks">
	<property name="adyenv6backofficeWebFragmentSrc" value="${ext.adyenv6backoffice.path}/resources/web-fragment.xml"/>
	<property name="adyenv6backofficeWebFragmentDestJar" value="${ext.backoffice.path}/web/webroot/WEB-INF/lib/webfragmentExt_adyenv6backoffice.jar"/>

	

	

	<macrodef name="adyenv6backoffice_after_clean">
		<sequential>
			<adyenv6backoffice_remove_web_fragment/>
		</sequential>
	</macrodef>

	<macrodef name="adyenv6backoffice_after_build">
		<sequential>
			<adyenv6backoffice_remove_web_fragment/>
			<adyenv6backoffice_create_web_fragment/>
		</sequential>
	</macrodef>

	<macrodef name="adyenv6backoffice_remove_web_fragment">
		<sequential>
			<if>
				<available file="${adyenv6backofficeWebFragmentDestJar}"/>
				<then>
					<delete file="${adyenv6backofficeWebFragmentDestJar}"/>
				</then>
			</if>
		</sequential>
	</macrodef>

	<macrodef name="adyenv6backoffice_create_web_fragment">
		<sequential>
			<if>
				<available file="${adyenv6backofficeWebFragmentSrc}"/>
				<then>
					<sequential>
						<jar destfile="${adyenv6backofficeWebFragmentDestJar}">
							<metainf file="${adyenv6backofficeWebFragmentSrc}"/>
						</jar>
					</sequential>
				</then>
			</if>
		</sequential>
	</macrodef>

	<patternset id="adyenv6backoffice.localization.pattern">
		<!-- core and hmc  -->
		<include name="**/*locales*_en.properties"/>
		<exclude name="**/hmc/web/webroot/WEB-INF/classes/**/*"/>
		<exclude name="**/unittest/**/*"/>

		<!-- cockpit (ng) -->
		<include name="**/i3-label_en.properties"/>
		<include name="**/labels_en.properties"/>

		<!-- messages -->
		<include name="**/*messages_en.properties"/>
		<include name="**/*messages.properties"/>

		<!-- frontend properties files in WEB-INF/messages folder -->
		<include name="**/WEB-INF/messages/*_en.properties"/>

		<!-- csv and impex -->
		<include name="**/*_en.csv"/>
		<include name="**/*_en.impex"/>

		<include name="**/lang-en.properties"/>

		<!-- email localizations from yacceleratorcore -->
		<include name="resources/**/messages/*_en.properties"/>

		<!-- include validation messages -->
		<include name="resources/**/ValidationMessages.properties"/>
	</patternset>

</project>
