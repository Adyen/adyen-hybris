<configuration xmlns="hybris.de/schemas/hmc/generic"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="hybris.de/schemas/hmc/generic hmc.xsd">


	<!-- Configuration for extension adyenAddon -->

<!--
	<explorertree>
		<group name="adyenAddongroup">
			<externalnode classname="com.adyen.storefront.hmc.AdyenAddonTreeLeafChip"/>		
		</group>
	</explorertree>
-->
	<type name="CMSSite" mode="append">
		<organizer>
			<editor mode="append">
				<tab name="adyen.attributes">
					<section name="adyen.setting">
						<listlayout>
	           				<attribute name="adyenUseAPI"/>
	           				<attribute name="adyenUseHPP"/>
	           			</listlayout>
					</section>
					<section name="adyen.api.integration.setting">
						<listlayout>
	           				<attribute name="adyenMerchantAccount"/>
	           				<attribute name="adyenAPIAccount"/>
	           				<attribute name="adyenAPIPassword">
	           					<customeditor classname="de.hybris.platform.hmc.attribute.StringEditorChip">
			                        <parameter key="encrypted" value="true"/>
			                    </customeditor>
	           				</attribute>
	           				<attribute name="adyenCSEKey"/>
	           				<attribute name="adyenUseSavedPayment"/>
	           				<attribute name="adyenEnableInstallment"/>
	           				<attribute name="adyenBoletoAvailable"/>
	           				<attribute name="availableBoletoTypes"/>
	           				<attribute name="siteAdyenPaymentMethods"/>
	           			</listlayout>
					</section>
					<section name="adyen.hpp.integration.setting">
						<listlayout>
							<attribute name="adyenUseDirectoryLookup"/>
							<attribute name="adyenHmacKey"/>
							<attribute name="adyenSkinCode"/>
						</listlayout>
					</section>
				</tab>
			</editor>
		</organizer>
	</type>
</configuration>
