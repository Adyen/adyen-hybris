		</parameter>
		<queryString>
			<![CDATA[SELECT {p.name} as PRODUCTNAME, SUM({oe.totalPrice} * {curr2.conversion}/{curr1.conversion}) AS SUMA
FROM {OrderEntry AS oe JOIN Order AS o ON {oe.order}={o.PK} JOIN Product AS p ON {oe.product}={p.PK}  JOIN Currency as curr1 ON {o.currency}={curr1.PK} JOIN Currency as curr2 ON {curr2.pk}= $P{Currency}
LEFT OUTER JOIN CMSSite as s ON {o.site}={s.PK}}
WHERE ({oe.creationtime} > to_date($P{From}) AND {oe.creationtime} < to_date($P{To})) AND rownum < 6 AND ($P{Site} IS NULL OR {s.pk}=$P{Site})
GROUP BY {p.PK}, {p.name}
ORDER BY SUMA DESC]]>
		</queryString>
		<field name="PRODUCTNAME" class="java.lang.String"/>
		<field name="SUMA" class="java.math.BigDecimal"/>
