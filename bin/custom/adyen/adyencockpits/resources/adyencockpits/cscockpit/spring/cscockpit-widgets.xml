<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<alias alias="csProductUrlStrategy" name="acceleratorCsProductUrlStrategy" />
	<bean id="acceleratorCsProductUrlStrategy"
		class="com.adyen.cockpits.cscockpit.widgets.controllers.strategies.impl.AcceleratorProductUrlStrategy"
		parent="defaultBaseCsProductUrlStrategy">
		<property name="siteBaseUrlResolutionService" ref="siteBaseUrlResolutionService" />
	</bean>
	
	
	<alias alias="csRefundConfirmationWidgetRenderer" name="adyenRefundConfirmationWidgetRenderer" />
	<bean id="adyenRefundConfirmationWidgetRenderer" parent="defaultCsRefundConfirmationWidgetRenderer"
		class="com.adyen.cscockpit.widgets.renderers.impl.AdyenRefundConfirmationWidgetRenderer">
		<property name="calculationService" ref="calculationService" />
		<property name="adyenPaymentService" ref="paymentService" />
		<property name="refundService" ref="refundService" />
		<property name="modelService" ref="modelService"/>
	</bean>

</beans>